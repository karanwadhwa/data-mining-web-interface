  body
    nav.navbar.navbar-expand-lg.navbar-dark.bg-primary.content-end
      .container
        a.navbar-brand(href='') Student Information Form
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarColor01', aria-controls='navbarColor01', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarColor01.collapse.navbar-collapse
          ul.navbar-nav.mr-auto
          .my-2.my-lg-0
            ul.navbar-nav.mr-auto
              li.nav-item
                  a.nav-link(href='#')
                    | Admin Login

    .container(style="padding-top: 20px;")
